        <td><%= @zekr_time.to_time.strftime("%H : %M  ") %></td>
        <td><%= zekr.num_of_zekrs %></td>
        <td><%= zekr.zekr_type %></td>
        <td><%= link_to 'Show', zekr %></td>
        <td><%= link_to 'Edit', edit_said_zekr_path(zekr) %></td>
        <td><%= link_to 'Destroy', zekr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

