<h1>لیست ذکر های گفته شده</h1>

<table class="table">
  <thead>
    <tr>
      <th>تاریخ</th>
      <th> ساعت</th>
      <th> تعداد</th>
      <th>نوع</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @said_zekrs.each do |zekr| %>
    <%
      @zekr_time = zekr.created_at
    %>
      <tr class= <%= @cl %>>
