<!be name anke parvane heirane ust..>



  

    <h3><i class="fa fa-angle-right"></i>  پروفايل </h3>
    <!-- FORM ELELEMNTS -->
    <div class="row mt">
        <div class="form-panel">

            <h4 class="mb"><i class="fa fa-angle-right"></i> >مشخصات</h4>


            <div class="form-horizontal style-form">
              
                <%= form_for(@profile) do |f| %>

                    <% if @profile.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                        <ul>
                        <% @profile.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>

                  <!--form class="form-horizontal style-form" method="get">-->

                    <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">نام</label>
                      <div class="col-sm-10">
                         <%= f.text_field :name , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">نام خانوادگی</label>
                      <div class="col-sm-10">
                          <%= f.text_field :lastname , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">شماره تلفن</label>
                      <div class="col-sm-10">
                         <%= f.text_field :phone , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">رایانامه</label>
                      <div class="col-sm-10">
                          <%= f.text_field :email , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">آدرس</label>
                      <div class="col-sm-10">
                          <%= f.text_field :address , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <span class="help-block">* لطفا در صورت استفاده از بسته سخت افزاری سرو مهر این قسمت تکمیل شود در غیر این صورت چیزی ننویسید.</span><br>
                      <label class="col-sm-2 col-sm-2 control-label">کد سرو مهر</label>
                      <div class="col-sm-10">
                          <%= f.text_field :mohr_code , :class=>"form-control" %>
                      </div>
                    </div>
                    <div class="actions">
                      <%= f.submit %>
                    </div>
              <% end %>
            </div>
        </div>
    </div>












