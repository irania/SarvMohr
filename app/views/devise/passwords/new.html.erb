<div id="login-page">
  <div class="container">
    <div >
      <div class="login-screen">
       
        <div class="form-login">

              <p class="centered"><a href="profile.html"><img src="/assets/login/icon.png" class="img-circle" width="60"></a></p>
              <h5 class="centered">سرو مهر</h5>
              <h2 class="form-login-heading">رمزتان فراموش شده است؟</h2>
              </br>
        
          
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= devise_error_messages! %>
            
                  <div class= "login-form">
                    <div class="login-wrap">
                        
                      <%= f.email_field :email, autofocus: true , :class => "form-control " ,:placeholder=>"رايانامه"%>
                      <br>
                      <%= f.submit "ارسال ايميل نحوه تنظيم مجدد رمز", :class=>"btn btn-theme btn-block"%>
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
              <% end %>

        </div><!--tahe form login-->
      </div>
    </div>
  </div>
</div>

























 



